{% extends 'base.html.twig' %}

{% block title %}Liste des lieux.{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }
</style>

<a href="{{ path('accueil') }}" class="btn btn-dark float-left m-2">Accueil</a>

<div class="example-wrapper">
    <h1>Liste des lieux :</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>CP</th>
                <th>Ville</th>
            </tr>
        </thead>
        <tbody>
            {% for place in places %}
            <tr>
                <td>{{ place.id }}</td>
                <td>{{ place.name }}</td>
                <td>{{ place.address }}</td>
                <td>{{ place.zipcode }}</td>
                <td>{{ place.city }}</td>
            </tr>

            {% endfor %}
        </tbody>
    </table>

        <a class="btn btn-success float-right mt-5" href="{{ path('place_new') }}">Ajouter un lieu</a>
</div>
{% endblock %}