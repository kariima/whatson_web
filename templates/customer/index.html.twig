{% extends 'base.html.twig' %}

{% block title %}Liste des clients.{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }
</style>

<a href="{{ path('accueil') }}" class="btn btn-dark float-left m-2">Accueil</a>

<div class="example-wrapper">
    <h1>Liste des clients :</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de naissance</th>
            </tr>
        </thead>
        <tbody>
            {% for customer in customers %}
            <tr>
                <td>{{ customer.id }}</td>
                <td>{{ customer.lastname }}</td>
                <td>{{ customer.firstname }}</td>
                <td>{{ customer.birthdate | date('d/m/Y', false) }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('customer_show', {'id': customer.id}) }}">Détails</a class="btn btn-primary">
                    <a class="btn btn-secondary" href="{{ path('customer_edit', {'id': customer.id}) }}">Modifier</a>
                </td>
            </tr>

            {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success float-right mt-5" href="{{ path('customer_new') }}">Ajouter un nouveau client</a>
</div>
{% endblock %}