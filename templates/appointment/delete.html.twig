<form method="post" action="{{ path('appointment_delete', {'id': appointments.id}) }}"
    onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ appointments.id) }}">
    <button class="btn btn-danger mt-5">Supprimer</button>
</form>

